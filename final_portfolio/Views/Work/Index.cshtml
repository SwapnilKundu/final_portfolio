<!--===== WORK =====-->
@model List<Work>

<section class="work section" id="work">
    <h2 class="section-title">Work</h2>
    @if (User.Identity.IsAuthenticated)
    {
        <p class="skills__text" style="text-align: center;">
            <a asp-controller="Work" asp-action="Create" style="text-decoration: none; color: #007BFF; font-weight: bold; border-bottom: 2px solid #007BFF; transition: border-bottom 0.3s;">
                Create Work
            </a>
        </p>
    }
    


    <div class="work__container bd-grid">
        @foreach (var work in Model)
        {
            <div style="display: inline-block; text-align: center; margin: 10px;">
                <a href="@work.GithubUrl" style="text-decoration: none;" >
                    <img src="@work.ImageUrl" alt="" style="max-width: 100%;">
                </a>
                @if (User.Identity.IsAuthenticated)
                {
                    <div style="margin-top: 5px;">
                        <a asp-route-id="@work.Id" asp-controller="Work" asp-action="Edit" style="margin-right: 10px; padding: 8px 16px; background-color: #007BFF; color: #fff; text-decoration: none; border: 1px solid #007BFF; border-radius: 5px; display: inline-block;">Edit</a>
                        <a asp-route-id="@work.Id" asp-controller="Work" asp-action="Delete" style="padding: 8px 16px; background-color: #dc3545; color: #fff; text-decoration: none; border: 1px solid #dc3545; border-radius: 5px; display: inline-block;">Delete</a>
                    </div>
                }
            </div>
        }
    </div>
</section>